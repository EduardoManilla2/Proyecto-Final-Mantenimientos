<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Finalizar mantenimiento?"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se actualizarán las observaciones y el estatus del mantenimiento."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_confirmar_finalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar y registrar"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_play"
        android:padding="12dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/botonFinalizar"
        android:textColor="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancelar_finalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        style="@style/Widget.Material3.Button.ElevatedButton"
        app:backgroundTint="@color/rojoCard"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_delete"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        app:elevation="4dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
